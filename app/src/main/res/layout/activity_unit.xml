<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_unit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.taeksukim.android.widgets.UnitActivity">

    <Button
        android:text="Area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnArea"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnLength"
        android:layout_toEndOf="@+id/btnLength" />

    <Button
        android:text="Weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnArea"
        android:layout_toEndOf="@+id/btnArea"
        android:id="@+id/btnWeight" />

    <Button
        android:text="LENGTH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLength"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/layoutLength"
        android:visibility="gone"
        android:layout_below="@+id/btnWeight">

        <TextView
            android:text="Length layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout"
        android:id="@+id/layoutArea"
        android:visibility="gone"
        android:layout_below="@+id/btnWeight">

        <TextView
            android:text="Area Layout"
            android:layout_width="wrap_content"
            android:id="@+id/textView3"
            android:layout_weight="1"
            android:layout_height="100dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="38dp"
        android:id="@+id/layoutWeight"
        android:visibility="gone"
        android:layout_below="@+id/btnWeight">

        <TextView
            android:text="Weight Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnWeight">

        <Spinner
            android:layout_width="match_parent"
            android:id="@+id/spinner5"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/num1"
                android:gravity="left|center_vertical"
                android:layout_weight="0.02"
                android:text="Input" />

            <ImageView
                android:layout_height="45dp"
                app:srcCompat="@android:drawable/ic_menu_send"
                android:id="@+id/imageView"
                android:layout_weight="0.10"
                android:layout_width="20dp" />

            <TextView
                android:text="TextView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView28"
                android:layout_weight="0.05" />

        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="20dp">

            <TextView
                android:text="mm"
                android:layout_width="161dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView1" />

            <TextView
                android:text="cm"
                android:layout_width="161dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />

            <TextView
                android:text="m"
                android:layout_width="161dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" />

            <TextView
                android:text="km"
                android:layout_width="161dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" />

            <TextView
                android:text="inch"
                android:layout_width="161dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" />

            <TextView
                android:text="ft"
                android:layout_width="161dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView6" />

            <TextView
                android:text="yd"
                android:layout_width="161dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView7" />

            <TextView
                android:text="mile"
                android:layout_width="161dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView8" />


        </GridLayout>

    </LinearLayout>

</RelativeLayout>
